@using NLayeredCv.Entities.Concrete
@model List<TblYeteneklerim>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@{string renk = "";}

<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <div class="wrapper">

        <!-- Main content -->
        <section class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-header">
                                <h3 class="card-title">Yetenek Listem</h3>
                            </div>
                            <!-- /.card-header -->
                            <div class="card-body">
                                <table class="table table-bordered">
                                    <thead>
                                        <tr>
                                            <th style="width: 10px">#</th>
                                            <th>Task</th>
                                            <th>Oran</th>
                                            <th style="width: 40px">Label</th>
                                            <th align="center">Sil</th>
                                            <th align="center">Düzenle</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var x in Model)
                                        {
                                            if (x.Oran >= 0 && x.Oran <= 50)
                                            {
                                                renk = "progress-bar bg-danger";
                                            }
                                            if (x.Oran >= 51 && x.Oran <= 70)
                                            {
                                                renk = "progress-bar bg-warning";
                                            }
                                            if (x.Oran >= 71 && x.Oran <= 84)
                                            {
                                                renk = "progress-bar bg-primary";
                                            }
                                            if (x.Oran >= 85)
                                            {
                                                renk = "progress-bar bg-success";
                                            }
                                        <tr>
                                            <td class="col-md-1">@x.ID</td>
                                            <td class="col-md-4">@x.Yetenek</td>
                                            <td>
                                                <div class="progress progress-xs">
                                                    <div class="@renk" style="width: @x.Oran%"></div>
                                                </div>
                                            </td>
                                            <td><span class="@renk">@x.Oran%</span></td>
                                            <td align="center" class="col-md-1">
                                                <a class="btn btn-danger btn-sm" href="/Yetenek/Sil/@x.ID">
                                                    <i class="fas fa-trash"></i>Sil
                                                </a>
                                            </td>
                                            <td align="center" class="col-md-2">
                                                <a class="btn btn-info btn-sm" href="/Yetenek/Duzenle/@x.ID">
                                                    <i class="fas fa-pencil-alt"></i>Düzenle
                                                </a>
                                            </td>
                                        </tr>
                                        }
                                    </tbody>
                                </table>
                                <br />
                                @Html.ActionLink("Yeni Yetenek Ekle", "YeniYetenek", null, new { @class = "btn btn-primary" })
                            </div>
                        </div>
                    </div>
                </div>
        </section>
    </div>
</body>
</html>

