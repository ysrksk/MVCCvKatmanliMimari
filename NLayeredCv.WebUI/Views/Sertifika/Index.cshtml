@using NLayeredCv.Entities.Concrete
@model List<TblSertifikalarim>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <section class="content">
        <div class="container-fluid">
          
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header p-2">
                            @Html.ActionLink("Yeni Sertifika Ekle", "YeniEkle", null, new { @class = "btn btn-primary" })
                        </div><!-- /.card-header -->
                        <div class="card-body">
                            @foreach (var x in Model)
                            {
                                <div class="tab-pane" id="timeline">
                                    <!-- The timeline -->
                                    <div class="timeline timeline-inverse">
                                        <!-- timeline time label -->
                                        <div class="time-label">
                                            <span class="bg-success">
                                                @x.Tarih
                                            </span>
                                        </div>
                                        <!-- /.timeline-label -->
                                        <!-- timeline item -->
                                        <div>
                                            <div class="timeline-item">
                                                <h3 class="timeline-header">@x.Baslik</h3>
                                                <div class="timeline-body">
                                                    @x.Açıklama
                                                </div>
                                                <div class="timeline-footer">
                                                    <a href="/Sertifika/Duzenle/@x.ID" class="btn btn-primary btn-sm">Düzenle</a>
                                                    <a href="/Sertifika/Sil/@x.ID" class="btn btn-danger btn-sm">Sil</a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</body>
</html>


