@using NLayeredCv.Entities.Concrete
@model TblIletisim

<div class="resume-section-content">
    <h2 class="mb-5">İletişim</h2>
    @using (Html.BeginForm("İletisim", "Home", FormMethod.Post))
    {
        <label>Ad Soyad</label>
        @Html.TextBoxFor(x => x.AdSoyad, new { @class = "form-control" })
        <br />

        <label>Mail</label>
        @Html.TextBoxFor(x => x.Mail, new { @class = "form-control" })
        <br />

        <label>Konu</label>
        @Html.TextBoxFor(x => x.Konu, new { @class = "form-control" })
        <br />

        <label>Mesaj</label>
        @Html.TextAreaFor(x => x.Mesaj, new { @class = "form-control" })
        <br />
        <button type="submit" class="btn btn-secondary"> Mesaj Gönder</button>
    }
</div>
